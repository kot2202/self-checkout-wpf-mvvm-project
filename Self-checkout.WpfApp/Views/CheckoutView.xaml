<UserControl x:Class="Self_checkout.WpfApp.Views.CheckoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Self_checkout.WpfApp.Views" xmlns:viewmodels="clr-namespace:Self_checkout.WpfApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:CheckoutViewModel}"
             mc:Ignorable="d" 
             Focusable="True" Loaded="CheckoutViewControl_Loaded"
             d:DesignHeight="480" d:DesignWidth="640" Background="Beige">
    <UserControl.InputBindings>
        <KeyBinding Key="D1" Command="{Binding AddNumberCommand}" CommandParameter="1" />
        <KeyBinding Key="D2" Command="{Binding AddNumberCommand}" CommandParameter="2" />
        <KeyBinding Key="D3" Command="{Binding AddNumberCommand}" CommandParameter="3" />
        <KeyBinding Key="D4" Command="{Binding AddNumberCommand}" CommandParameter="4" />
        <KeyBinding Key="D5" Command="{Binding AddNumberCommand}" CommandParameter="5" />
        <KeyBinding Key="D6" Command="{Binding AddNumberCommand}" CommandParameter="6" />
        <KeyBinding Key="D7" Command="{Binding AddNumberCommand}" CommandParameter="7" />
        <KeyBinding Key="D8" Command="{Binding AddNumberCommand}" CommandParameter="8" />
        <KeyBinding Key="D9" Command="{Binding AddNumberCommand}" CommandParameter="9" />
        <KeyBinding Key="D0" Command="{Binding AddNumberCommand}" CommandParameter="0" />
        <KeyBinding Key="Backspace" Command="{Binding ClearCommand}" />
        <KeyBinding Key="E" Command="{Binding AddProductCommand}" /> <!-- Needs key different than Enter or Space to prevent accidental button clicks -->
    </UserControl.InputBindings>
    <Grid Margin="0,2,0,-2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Margin="0,0,1.333,0">


        </Label>
        <ListBox Name="Paragon" Margin="10,10,10.333,154"/>
        <Button Content="Next screen" Command="{Binding NavigatePostPurchaseCommand}" Margin="0,0,0.333,0" Height="88" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="1" Content="1" Grid.Column="2" Margin="0.333,0,143,237" Height="70" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="70"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="9" Content="9" Grid.Column="2" Margin="143.333,0,0,91" HorizontalAlignment="Center" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="8" Content="8" Grid.Column="2" HorizontalAlignment="Center" Margin="72.333,0,71,91" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="7" Content="7" Grid.Column="2" Margin="0.333,0,143,91" HorizontalAlignment="Center" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="6" Content="6" Grid.Column="2" Margin="143.333,0,0,164" HorizontalAlignment="Center" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="5" Content="5" Grid.Column="2" HorizontalAlignment="Center" Margin="72.333,0,71,164" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="4" Content="4" Grid.Column="2" Margin="0.333,0,143,164" HorizontalAlignment="Center" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="2" Content="2" Grid.Column="2" Margin="72.333,0,71,237" HorizontalAlignment="Center" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="3" Content="3" Grid.Column="2" Margin="143.333,0,0,237" HorizontalAlignment="Center" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <Button Command="{Binding AddNumberCommand}" CommandParameter="0" Content="0" Grid.Column="2" Margin="0.333,0,143,17" HorizontalAlignment="Center" Width="70" Height="70" VerticalAlignment="Bottom"/>
        <TextBox Text="{Binding ScreenValue}" Grid.Column="2" Height="53" Margin="8.667,76,25,0" TextAlignment="Center" VerticalContentAlignment="Center"  VerticalAlignment="Top" FontSize="26"/>

        <Button Command="{Binding AddProductCommand}" Name="butEnter" Content="Enter" Grid.Column="2" Margin="72.333,0,0,17" HorizontalAlignment="Center" Width="141" Height="70" VerticalAlignment="Bottom"/>
        <Button Name="Fruit" Content="Owoce" Grid.Column="1" Margin="30.667,321,38.333,0" Height="124" VerticalAlignment="Top"/>
        <Button Name="vegetables" Content="Warzywa" Grid.Column="1" Margin="30.667,192,38.333,0" Height="124" VerticalAlignment="Top"/>
        <Button Name="Bread" Content="Pieczywo" Grid.Column="1" Margin="30.667,61,38.333,0" Height="124" VerticalAlignment="Top"/>
        <Button Command="{Binding ClearCommand}" Name="DEL" Content="C" Grid.Column="2" Margin="72.333,0,0,314" Height="21" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="141"/>
        <Button Name="Accept" Content="Zatwierdź" Margin="10,0,10.333,111" Height="36" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
